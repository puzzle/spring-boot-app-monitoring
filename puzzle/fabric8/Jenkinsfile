pipeline {
  agent { label 'buildnode' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
    timeout(time: 10, unit: 'MINUTES')
  }
  environment {
    M2_HOME = tool('maven35')
    PATH = "${M2_HOME}/bin:$PATH"
    KUBERNETES_MASTER = "https://ose3-master.puzzle.ch:8443"
    KUBERNETES_NAMESPACE = "dtschan"
    KUBERNETES_LOGIN = credential('dtschan-registry')
  }
  stages {
    stage('Build App') {
      steps {
        withMaven {
          sh "mvn clean package"
        }
      }
    }
    stage('Build Image') {
      steps {
        script {
          sh "mvn fabric8:build -Dfabric8.password=${KUBERNETES_LOGIN_PSW}"
        }
      }
    }
  }
}
